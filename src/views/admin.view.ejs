<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="shortcut icon"
      href="https://cdn-icons-png.flaticon.com/512/52/52102.png"
      type="image/x-icon"
    />
    <link rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.6.1/css/all.css"
      integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/style.css" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <title>MealBox</title>
  </head>
  <body>
    <div class="wrapper">
      <ul class="sidebar">
        <li>
          <a href="/"><i class="fa fa-home" aria-hidden="true"></i></a>
        </li>

        <li>
          <a
            data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasRight"
            aria-controls="offcanvasRight"
            ><i class="fa fa-coffee" aria-hidden="true"></i
          ></a>
        </li>

        <li>
          <a data-bs-toggle="modal" data-bs-target="#exampleModal"
            ><i class="fa fa-birthday-cake" aria-hidden="true"></i
          ></a>
        </li>

        <li class="active">
          <a href="#">
            <i class="fa fa-truck" aria-hidden="true"></i>
          </a>
        </li>

        <li><i class="fa fa-certificate" aria-hidden="true"></i></li>
      </ul>

      <div class="admin__cover">
        <table>
          <thead>
            <tr>
              <th class="th">#</th>
              <th class="th">Order</th>
              <th class="th">Amount</th>
              <th class="th">TotallyPrice</th>
              <th class="th">Restaurant</th>
              <th class="th">Customer</th>
              <th class="th">Address</th>
              <th class="th">Phone</th>
            </tr>
          </thead>
          <tbody>
            <% orders.map(e => { %>
            <tr>
              <td class="td"><%= e.id %></td>
              <td class="td"><%= e.meal %></td>
              <td class="td"><%= e.amount %></td>
              <td class="td"><%= e.totalPrice %></td>
              <td class="td"><%= e.restaurant %></td>
              <td class="td"><%= e.customer %></td>
              <td class="td"><%= e.address %></td>
              <td class="td"><%= e.phone %></td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div>
    </div>

      <!-- Create Restaurant -->
    <div
      class="offcanvas offcanvas-end"
      tabindex="-1"
      id="offcanvasRight"
      aria-labelledby="offcanvasRightLabel"
    >
      <div class="offcanvas-header">
        <h5 id="offcanvasRightLabel">Restaurant</h5>
        <button
          type="button"
          class="btn-close text-reset"
          data-bs-dismiss="offcanvas"
          aria-label="Close"
        ></button>
      </div>
      <div class="offcanvas-body">
        <form class="offcanvas-form" action="/createRestaurant" enctype="application/x-www-form-urlencoded" method="post">
          <input required autocomplete="off" placeholder="Enter Restaurant Name" type="text" name="restaurant" class="offcanvas-input">
          <input required autocomplete="off" placeholder="Enter Restaurant Image Link" type="url" name="imgLink" class="offcanvas-input">
          <select name="category" class="offcanvas-select">
            <% categories.map(e=> { %>
              <option value=<%= e.categoryName%>><%= e.categoryName%></option>
            <%})%>
          </select>
          <button class="btn btn-primary" type="submit">Send</button>
        </form>
      </div>
    </div>

    <!-- Create Meal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Meal</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="/createFood" enctype="application/x-www-form-urlencoded" method="post">
              <input required autocomplete="off" placeholder="Enter Meal" type="text" name="meal" class="modal__input" >
              <input required autocomplete="off" placeholder="Enter Meal image link" type="url" name="imgLink" class="modal__input">
              <input required autocomplete="off" placeholder="Enter Meal price" type="number" name="price" class="modal__input">
              <select name="restaurant" class="modal__select">
                <% restaurants.map(e => { %>
                  <option value=<%= e.restaurant %>><%= e.restaurant %></option>
                <%})%>
              </select>
              <button class="btn btn-primary" type="submit">Send</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script src="js/script.js"></script>
  </body>
</html>
